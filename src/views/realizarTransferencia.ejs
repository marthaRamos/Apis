  <body>
    <div class="container p-5">
      
     
      <form  action="" class="card card-body">
        <div class="form-group">
          <label for="cuentaP">Ingrese el número de cuenta personal :</label>
          <input type="text" class="form-control"  name="cuentaP" id="cuentaP" placeholder="Número personal" />
        </div>
        <br />
        <div class="form-group">
          <label for="cuentaT">Ingrese la cuenta a transferir</label>
          <input type="text" class="form-control" name="cuentaT" id="cuentaT" placeholder="Número de tercero transferir" />
        </div>
        <br />
        <div class="form-group">
          <label for="monto">Ingrese el monto a transferir: </label>
          <input type="text" class="form-control" name="monto" id="monto" placeholder="Ingrese monto" />
        </div>
        <br />
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Transferir</button>
        </div>
      </form>
     
    </div>
