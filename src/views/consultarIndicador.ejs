          fetch('https://mindicador.cl/api')
          .then(res => res.json())
          .then(data => {
              console.log(data.uf)
            contenido3.innerHTML = `<p> El UTM esta a : ${data.utm.valor} </p>
            <p>  ${data.utm.unidad_medida} </p>
            <p>  ${data.utm.fecha} </p>
            `
          })
      }
    </script>



